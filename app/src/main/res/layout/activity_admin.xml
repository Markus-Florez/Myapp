<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/adminBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo2" />

    <ImageButton
        android:id="@+id/Menu"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_button_circle"
        android:contentDescription="Menú"
        android:padding="10dp"
        android:src="@drawable/ic_hamburger_lines_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:cardCornerRadius="48dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/btnusario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:src="@drawable/img" />
        </androidx.cardview.widget.CardView>

        
    </LinearLayout>

    <ImageButton
        android:id="@+id/carpeta"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:background="@drawable/carpeta2"
        android:padding="8dp"
        android:contentDescription="Carpeta" />

    <LinearLayout
        android:id="@+id/sideMenu"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#EE212121"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/menuHome"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_view" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Inicio"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuUsers"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_myplaces" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Permitir acceso"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuDiagElec"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_compass" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Diag. Eléc"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuDiagMcos"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_share" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Diag. Mcos"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/diagMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="84dp"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btnCrearDiagMcos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#22000000"
            android:textColor="#FFFFFF"
            android:text="Crear Diagramas Mecánicos" />
        <Button
            android:id="@+id/btnCrearDiagElec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#22000000"
            android:textColor="#FFFFFF"
            android:text="Crear Diagramas Eléctricos" />
        <Button
            android:id="@+id/btnEditarDiagElec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#22000000"
            android:textColor="#FFFFFF"
            android:text="Editar Diagramas Eléctricos" />
        <Button
            android:id="@+id/btnEditarDiagMcos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#22000000"
            android:textColor="#FFFFFF"
            android:text="Editar Diagramas Mecánicos" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/profilePopup"
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="96dp"
        android:visibility="gone"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212121"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/popupLogo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/popupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Admin"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/popupEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Cerrar sesión"
                android:background="#22000000"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnChangeLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cambiar logo"
                android:background="#22000000"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
